{
  "name": "consultas-policiales",
  "version": "1.0.0",
  "description": "Sistema de inteligencia y análisis de vínculos",
  "private": true,
  "scripts": {
    "dev": "echo \"Por favor, abre 3 terminales y ejecuta 'pnpm dev:shared', 'pnpm dev:server', y 'pnpm dev:client' por separado.\"",
    "dev:shared": "pnpm --filter @consultas/shared dev",
    "dev:server": "pnpm --filter @consultas/server dev",
    "dev:client": "pnpm --filter @consultas/client dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "start": "pnpm --filter @consultas/server start",
    "db:push": "pnpm --filter @consultas/server db:push",
    "db:seed": "pnpm --filter @consultas/server db:seed",
    "db:studio": "pnpm --filter @consultas/server db:studio"
  },
  "keywords": [],
  "author": "ferretofreddy",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.5.3"
  }
}
